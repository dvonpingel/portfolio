{
  "extends": "react-app",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["react-app", "@typescript-eslint"]
    },
    {
      // Enforce alphabetical key sort of translation files
      "files": ["./src/i18n/translations/*/*"],
      "rules": {
        "sort-keys": "error"
      }
    }
  ],
  "rules": {
    "react/jsx-key": "error",
    "react/jsx-no-duplicate-props": "error",
    "react/no-unknown-property": "error",
    "no-console": 1,
    "no-debugger": "error",
    // https://eslint.org/docs/latest/rules/sort-imports#rule-details
    "sort-imports": [
      2,
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    // https://github.com/import-js/eslint-plugin-import/blob/main/docs/rules/order.md
    "import/order": [
      1,
      {
        "newlines-between": "always",
        "groups": [
          ["builtin", "external"],
          ["internal", "parent"],
          ["sibling", "index"],
          "type"
        ],
        "pathGroups": [
          { "pattern": "react**", "group": "external", "position": "before" },
          {
            "pattern": "@patterninc/**",
            "group": "internal",
            "position": "before"
          },
          { "pattern": "**/Context", "group": "internal" },
          { "pattern": "**/services", "group": "internal" },
          { "pattern": "**/modules", "group": "internal" },
          { "pattern": "**/common", "group": "internal" }
        ],
        "pathGroupsExcludedImportTypes": ["@patterninc/**"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
